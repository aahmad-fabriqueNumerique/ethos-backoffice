# Firebase configuration
# Copy this file to .env and fill in the values
# Using NUXT_PUBLIC_ prefix to expose these variables to the client
NUXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NUXT_PUBLIC_FIREBASE_DATABASE_URL=your_database_url_here
NUXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NUXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NUXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Firebase Admin SDK configuration - NOT exposed to the client
# These are for server-side authentication verification
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_client_email_here
FIREBASE_ADMIN_PRIVATE_KEY="your_service_account_private_key_here"
# Note: The private key should be enclosed in double quotes and include all newlines (\n)
